<% include ../partials/header %>

<div class="container">
  <h1>Edit <%= song.title %></h1>

  <form action="/songs/<%= song._id %>/?_method=PUT" method="POST">
  <div class="form-group">
    <input class="form-control" type="text" value="<%= song.title %>" name="song[title]" placeholder="Song title">
  </div>
  <div class="form-group">
    <input class="form-control" type="text" value="<%= song.author %>" name="song[author]" placeholder="Artist/Author">
  </div>
  <div class="form-group">
    <textarea class="form-control" name="song[lyrics]" cols="30" rows="10" placeholder="Song Lyrics"><%= song.lyrics %></textarea>
  </div>
  <div class="form-group">
    <button class="btn btn-primary">Add song</button>
  </div>
  </form>
</div>

<% include ../partials/footer %>
