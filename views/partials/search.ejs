<div class="pt-4 pb-2">
  <form action="/songs" method="GET">
  <div class="row justify-content-center">
    <div class="col-md-7 mb-3">
        <div class="input-group">
          <input type="search" name="search" class="form-control form-control-lg" placeholder="Find a song..." autocomplete="off" <% if(typeof searchVal !== 'undefined'){ %>value="<%= searchVal %>"<% } %>>
          <div class="input-group-append">
            <button class="btn btn-primary btn-lg" type="submit"><i class="fa fa-search"></i></button>
          </div>
        </div>
    </div>
    <div class="col-md-2">
        <a href="/songs/add" class="btn btn-primary btn-lg btn-block">Add song &nbsp;<i class="fa fa-plus-circle"></i></a>
    </div>
  </div>
  </form>
</div>
