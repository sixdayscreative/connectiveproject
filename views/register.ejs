<% include ./partials/header %>
<div class="container">
<div class="text-center">
  <h1 class="display-4 my-5">Hello! Sign up!</h1>
</div>
<div class="row justify-content-center">
  <div class="col-md-7">
    <form action="/register" method="post">
      <div class="form-row">
        <div class="col mb-3">
          <input type="text" name="givenName" placeholder="First name*" class="form-control">
        </div>
        <div class="col mb-3">
          <input type="text" name="familyName" placeholder="Last name*" class="form-control">
        </div>
      </div>
      <div class="form-group">
        <input type="text" name="username" placeholder="Pick a username*" class="form-control">
      </div>
      <div class="form-group">
        <input type="email" name="email" placeholder="Email Address*" class="form-control">
      </div>
      <div class="form-group">
        <input type="password" name="password" placeholder="Pick a password*" class="form-control">
      </div>
      <div class="form-group text-right">
        <button class="btn btn-primary btn-lg">Sign up! &nbsp;<i class="fa fa-arrow-right"></i></button>
      </div>
    </form>
  </div>
</div>
</div>
<% include ./partials/footer %>
